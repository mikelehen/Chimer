<Window x:Class="Chimer.ConfigFileErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConfigFileErrorDialog" Height="350" Width="500" ResizeMode="NoResize">
    <Grid>
        <Label Content="Error Parsing Configuration File" HorizontalAlignment="Left" Margin="81,10,0,0" VerticalAlignment="Top" FontSize="24"/>
        <TextBox Name="txtError" HorizontalAlignment="Left" IsReadOnly="True" Height="221" Margin="10,57,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="462" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <Button Name="btnRevert" Content="Revert File" HorizontalAlignment="Left" Margin="226,283,0,0" VerticalAlignment="Top" Width="75" Click="btnRevert_Click"/>
        <Button Name="btnLeave" Content="OK (File Will be Left As-is)" HorizontalAlignment="Left" Margin="306,283,0,0" VerticalAlignment="Top" Width="166" Click="btnLeave_Click"/>
    </Grid>
</Window>
